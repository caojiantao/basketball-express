  content: 'Â·';
  margin-right: 8rpx;
}

.actions {
  display: flex;
  align-items: center;
}

.action {
  display: flex;
  align-items: center;
}

.count {
  font-size: 24rpx;
  color: #999;
  margin-left: 4rpx;
}

.loading, .empty, .error {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 32rpx;
}

.loading text, .empty text, .error text {
  font-size: 24rpx;
  color: #999;
}

.error text {
  color: #576b95;
} 