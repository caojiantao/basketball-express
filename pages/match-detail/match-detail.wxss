.score-container {
  background-color: #f6f7f9;
  padding: 10px;
}

.score-item {
  padding: 10px;
  background-color: #fff;
  margin-bottom: 10px;
}

.score-main {
  display: flex;
}

.score-cover {
  width: 80px;
  height: 100px;
}

.score-info {
  margin-left: 10px;
  flex-grow: 1;
}

.score-name {
  font-weight: 700;
}

.score-desc {
  font-size: 14px;
  color: gray;
}

.score-remark {
  margin-top: 10px;
  padding: 8px;
  background-image: linear-gradient(to right, rgba(255, 243, 216, .6), rgba(255, 243, 216, 0));
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden;
  font-size: 14px;
  color: #ff5a2d;
}

.score-avg {
  margin-left: 10px;
  text-align: right;
}

.score-avg-value {
  font-size: 20px;
  font-weight: 700;
  color: #00a4b8;
}

.score-avg-count {
  font-size: 14px;
  color: gray;
}

.score-label-container {
  display: flex;
  flex-direction: row;
  align-items: center;
}

.score-label {
  display: inline;
  padding: 1px 2px;
  margin: 5px 5px 0 0;
}

.container {
  padding: 20rpx;
  background: #f6f6f6;
  min-height: 100vh;
}

.score-list {
  margin-top: 20rpx;
}

.score-item {
  background: #fff;
  border-radius: 12rpx;
  padding: 20rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

/* 空状态样式 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 60rpx 0;
  background: #fff;
  border-radius: 12rpx;
  margin-top: 20rpx;
}

.empty-icon {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 20rpx;
}

.empty-text {
  color: #999;
  font-size: 28rpx;
}

/* 加载状态样式 */
.loading-state {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 30rpx 0;
}

.loading-icon {
  width: 40rpx;
  height: 40rpx;
  border: 4rpx solid #f3f3f3;
  border-top: 4rpx solid #3498db;
  border-radius: 50%;
  animation: spin 1s linear infinite;
  margin-right: 16rpx;
}

.loading-text {
  color: #666;
  font-size: 26rpx;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

/* 无更多数据样式 */
.no-more {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 30rpx 0;
}

.divider {
  width: 100rpx;
  height: 1rpx;
  background: #e5e5e5;
}

.no-more-text {
  color: #999;
  font-size: 24rpx;
  margin: 0 20rpx;
}