.picker {
  padding: 20px;
  background-color: #f0f1f5;
  color: #6c717d;
}

.match-item {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 10px;
}

.match-logo {
  width: 50px;
  height: 50px;
}

.match-home,
.match-result,
.match-away {
  display: flex;
  align-items: center;
}

.match-home {
  flex: 3;
  justify-content: flex-end;
}

.match-result {
  flex: 2;
  justify-content: center;
  font-size: 18px;
  font-weight: 700;
  flex-direction: column;
}

.match-result-time {
  font-size: 14px;
  font-weight: 400;
}

.match-away {
  flex: 3;
  justify-content: flex-start;
}

.match-team-name {
  margin: 0 8px;
}
