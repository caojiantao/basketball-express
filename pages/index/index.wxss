.match-item {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 10px;
}

.match-logo {
  width: 50px;
  height: 50px;
}

.match-home,
.match-result,
.match-away {
  display: flex;
  align-items: center;
}

.match-home {
  flex: 3;
  justify-content: flex-end;
}

.match-result {
  flex: 2;
  justify-content: center;
  font-size: 18px;
  font-weight: 700;
}

.match-away {
  flex: 3;
  justify-content: flex-start;
}

.match-team-name {
  margin: 0 8px;
}
